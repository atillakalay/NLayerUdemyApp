@{
	ViewData["Title"] = "Index";
}
@model List<ProductWithCategoryDto>

<table class="table table-striped">
	<thead>
	<td>Id</td>
	<td>Name</td>
	<td>Price</td>
	<td>Stock</td>
	<td>Category</td>
	<td>CreatedDate</td>
	<td>Actions</td>
	</thead>
	<tbody>
	@foreach (var item in Model)
	{
		<tr>
			<td>@item.Id</td>
			<td>@item.Name</td>
			<td>@item.Price</td>
			<td>@item.Stock</td>
			<td>@item.category.Name</td>
			<td>@item.CreatedDate</td>
			<td><a class="btn btn-primary" asp-action="Save" asp-controller="Products" asp-route-id="@item.Id">Kaydet</a></td>
			<td><a class="btn btn-warning" asp-action="Update" asp-controller="Products" asp-route-id="@item.Id">Güncelle</a></td>
			<td>@item.CreatedDate</td>
		</tr>
	}
	</tbody>
</table>